/* components/.button/.button.wxss */

.button{
  /* width: 270px; */
  display: flex;
  align-items: center;
  justify-content: center;
  height: 40px;
  box-shadow: 0px 11px 32px 0px rgba(246,112,90,0.30);
  border-radius: 7px;

/* 集中可定制属性，方便查找。 include: 宽度，渐变。*/
  width: 180px;
  background: #F6705A;
  color: white;
}
.button.gradient{
  background: linear-gradient(135deg, rgba(254,153,111,1) 0%,rgba(246,112,90,1) 100%); 
}
.button.transparent{
  border: 2px solid #F6705A;
  color: #F6705A;
  background-color: transparent;
}
.button.long{
  width: 270px;
}
.button:active{
  opacity: 0.5;
}


.button .text{
  font-size: 13px;
}
