/**index.wxss**/

.container{
  position: relative;
  display: flex;
  align-items: stretch;
}
.wholeBackground{
  position: absolute;
  left: 0;
  top: 0;
  height: 100vh;
  width: 100vw;
  background: #EEF7F6;
  z-index: -1;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 64px;
  height: 64px;
  margin: 10px;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.components {
  display: flex;
  flex-direction: column;
  align-items: center;
}


