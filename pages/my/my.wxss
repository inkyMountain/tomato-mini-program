/* pages/my/my.wxss */

.container{
  display: flex;
  align-items: stretch;
  justify-content: flex-start;
  background: #F6F6F6;
  height: 100vh;
}

.container .profile{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  background: white;
  padding: 10px;
}
.container .profile .username{
  font-size: 14px;
  font-weight: bold;
  color: rgb(63, 63, 63);
  position: relative;
  margin: 5px 0 0 20px;
  letter-spacing: 1px;
  z-index: 0;
}
.container .profile .username::after{
  content: '';
  position: absolute;
  display: block;
  left: 0;
  top: 50%;
  width: 110%;
  height: 6px;
  transform: translate(-5%);
  background: rgba(255, 220, 207, 0.8 );
  z-index: -1;
}
.container .profile .avatar{
  height: 55px;
  width: 55px;
  border-radius: 50%;
  overflow: hidden;
  display: block;
}
.container .advice{
  font-size: 9px;
  color: #F6705A ;
  letter-spacing: 1px;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 10px;
  align-self: stretch;
}

.container .tabs{
  display: flex;
  justify-content: stretch;
  padding: 10px 0;
  margin: 10px 0;
  background: white;
}

.container .tabs .tab{
  flex: 1;
  text-align: center;
  font-size: 12px;
  color: #333;
}

.container .tabs .tab .text{
  position: relative;
}

.container .tabs .tab.history text::before{
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 115%;
  width: 80%;
  margin-left: 10%;
  height: 3px;
  border-radius: 5px;
  background: rgba(246, 111, 90, 0.8);

}