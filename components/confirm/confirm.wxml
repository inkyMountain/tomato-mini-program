<!--components/confirm/confirm.wxml-->
<view class='container'>
  <textarea class='content' placeholder-class='placeholder'
    placeholder='{{text}}' auto-focus auto-height='true'
    maxlength='300' bindinput='onInput' value='{{value}}'/>
  <view class='buttons'>
    <view class='button cancel' bindtap='onCancel'>
      取消
    </view>
    <view class='button confirm' bindtap='onConfirm'>
      确定
    </view>
  </view>
</view>
